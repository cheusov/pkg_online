set -e

. pkg_online_server.env
. pipestatus

export LC_ALL=C

suff="-$PKG_SUMMARY_TYPE"
msg=" $PKG_SUMMARY_TYPE"

summary2dict () {
awk '
/^PKGNAME=/ {
    pkgbase = substr($0, 9)
    sub(/-[^-]*$/, "", pkgbase)

    next
}

/^COMMENT=/ {
    sub(/^COMMENT=/, "")
    comment = $0
}

/^PKGPATH=/ {
    sub(/^PKGPATH=/, "")
    pkgpath = $0
}

NF == 0 {
    printf "_____\n\n%s,%s\n%s\n", pkgpath, pkgbase, comment
    pkgbase = pkgpath = comment = ""
}
' "$@"
}

runpipe0 \
    summary2dict "$@" '|' \
    dictfmt -c5 -q -s "pkgsrc packages: onelineinfo database" \
        --allchars --index-data-separator '|%%|' \
        --without-header --without-headword -u 'http://www.pkgsrc.org' \
        pkgsrc${suff}-onelineinfo --columns 0
