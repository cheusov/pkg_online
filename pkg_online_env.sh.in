# libexec
export PATH=@libexec@:$PATH

# source and binary search fields
fields_src='PKGPATH DEPENDS BUILD_DEPENDS CONFLICTS INDEX HOMEPAGE COMMENT LICENSE ONLYFOR NOTFOR MAINTAINER CATEGORIES PLIST DESCRIPTION'
fields_bin='PKGPATH DEPENDS CONFLICTS COMMENT BUILD_DATE CATEGORIES HOMEPAGE LICENSE OS_VERSION PKGTOOLS_VERSION PROVIDES REQUIRES DESCRIPTION'

# default server:port
if test -z "$PKG_ONLINE_SERVER"; then
    export PKG_ONLINE_SERVER=dictd.xdsl.by
fi
if test -z "$PKG_ONLINE_PORT"; then
    export PKG_ONLINE_PORT=26280
fi

# default DB type - src
if test -z "$PKG_SUMMARY_TYPE"; then
    PKG_SUMMARY_TYPE=src
fi
