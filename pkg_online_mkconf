#!/bin/sh

. ./pkg_online_fields.sh

usage (){
    echo 'usage: pkg_online_mkconf <bin|src> <db_dir>'
}

if test $# -ne 2; then
    usage
    exit 1
fi

binsrc=$1
db_dir=$2

shift
shift

database (){
cat <<EOF
database pkgsrc-$binsrc-$1 {
   index  "$db_dir/pkgsrc-$binsrc-$1.index"
   data   "$db_dir/pkgsrc-$binsrc-$1.dict"
}
EOF
}

cmd="echo \$fields_$binsrc"
fields=`eval $cmd`
for f in $fields; do
    database $f
done
