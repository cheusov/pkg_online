set -e

. pkg_online_env.sh
. pipestatus

args=`getopt fs $*`
if [ $? -ne 0 ]; then
    echo 'usage: pkg_online_client [OPTIONS] [field:strategy:query]'
    exit 2
fi
set -- $args

while [ $# -gt 0 ]; do
    case "$1" in
        -s)
            strats=1;;
        -f)
            dbs=1;;
        --)
            shift
	    break;;
    esac
    shift
done

extract_strat (){
    awk -F'\t' '{printf "%15s - %s\n", $3, $4}'
}

extract_fields (){
    awk -F'\t' -v type="$PKG_SUMMARY_TYPE" '
	$3 ~ ("^pkgsrc-" type "-index") {
	    sub(/^.*-/, "", $3)
	    print $3
	}'
}

if test $strats; then
    runpipe0 dict -h "$PKG_ONLINE_SERVER" -p "$PKG_ONLINE_PORT" \
	-f -S '|' extract_strat
fi

if test $dbs; then
    runpipe0 dict -h "$PKG_ONLINE_SERVER" -p "$PKG_ONLINE_PORT" \
	-f -D '|' extract_fields
fi
